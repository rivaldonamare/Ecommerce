@model Guid

<div class="container mt-5">
<div class="card shadow border-0">
    <div class="card-header bg-success bg-gradient text-light py-4">
        <h5 class="pt-2 text-white">Order Confirmation</h5>
    </div>
    <div class="card-body">
        <div class="container text-center">
            <h3 class="text-success">Thank you for your order!</h3>
            <p>YPayment has been applied successfully!.</p>
            <a asp-area="Admin"
               asp-controller="Order"
               asp-action="Details"
               asp-route-orderId="@Model" class="btn btn-primary">Back to Order Details</a>
        </div>
    </div>
</div>
</div>