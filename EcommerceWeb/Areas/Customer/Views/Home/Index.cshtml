@model IEnumerable<Product>
<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5 text-white opacity-75 text-uppercase text-center" style="padding-top:5%">@product.Title</p>
                            <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="card-title h6 text-white opacity-75 text-uppercase text-center" style="padding-top:2%">List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
                        </div>
                        <div class="pl-1">
                            <p class="card-title text-white opacity-75 text-uppercase text-center" style="padding-top:2%">As low as: <span> @product.Price100.ToString("c")</span></p>
                        </div>
                        <div style="display: flex; justify-content: center;">
                            <a asp-action="Details" 
                            asp-route-productId="@product.Id"
                            class="btn btn-outline-success bg-gradient border-0 form-check-control"> Details </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
