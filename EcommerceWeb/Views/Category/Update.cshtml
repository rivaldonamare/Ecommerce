@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for=CatergoryName class="pb-3"></label>
            <input asp-for="CatergoryName" class="form-control" />
            <span asp-validation-for="CatergoryName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="pb-3"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6">
                <button type="submit" class="btn btn-success form-control">Update</button>
            </div>
            <div class="mb-3 col-md-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to Category List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}